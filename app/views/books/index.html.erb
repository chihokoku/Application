
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th><th>Body</th><th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |list| %>
  <tbody>
    <tr>
      <td><span><%= list.title %></span></td>
      <td><span><%= list.body %></span></td>
      <td>
          <span><%= link_to 'Show', book_path(list.id) %></span>
          <span> <%= link_to 'Edit', edit_book_path(list.id) %>  </span>
          <%= link_to 'Destroy', book_path(list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          <!--()内がどうしてlist.id?  book.idではどうしてダメなのか-->
          <!--resourcesで書いているからbook_pathで大丈夫-->
          <!--book_pathの（）内に@が必要ないのはどうしてか-->
      </td>
    </tr>
  </tbody>
  <% end %>
</table>



<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors occurred!
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>